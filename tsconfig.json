{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext", //ブラウザで動かす時はesnext。nodeで動かす時はcommonjs
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "charset": "utf8",
    "newLine": "LF",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
